# Container configuration
CONTAINER_NAME=my-bedrock-server
SERVER_NAME="MyBedrockServer"
LEVEL_NAME="MyWorld"
LEVEL_SEED="123456789"
GAMEMODE=survival
DIFFICULTY=normal
MAX_PLAYERS=10
SERVER_PORT=19132

# Remote access
ENABLE_TUNNEL=true
TUNNEL_TYPE=playit
TUNNEL_AUTHTOKEN=your-ngrok-token
PLAYIT_TUNNEL_URL=abcd1234.playit.gg:12345

# Backup configuration
BACKUP_DIR=./backups
MAX_BACKUPS=5
REMOVAL_PASSWORD=secret123

# Environment hash storage
ENV_HASH_FILE=.env.hash
